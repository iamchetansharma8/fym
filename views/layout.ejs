    <script>
        <% if(flash.success && flash.success.length>0){ %>
            new Noty({
                theme:'mint',
                text: '<%=flash.success%>',
                type:'success',
                layout:'topCenter',
                timeout:2600
            }).show();
        <%}%>
        <% if(flash.error && flash.error.length>0){ %>
            new Noty({
                theme:'mint',
                text: '<%=flash.error%>',
                type:'error',
                layout:'topCenter',
                timeout:2600
            }).show();
        <%}%>
        <% if(flash.warning && flash.warning.length>0){ %>
            new Noty({
                theme:'mint',
                text: '<%=flash.warning%>',
                type:'warning',
                layout:'topCenter',
                timeout:2600
            }).show();
        <%}%>
        <% if(flash.alert && flash.alert.length>0){ %>
            new Noty({
                theme:'sunset',
                text: '<%=flash.alert%>',
                type:'alert',
                layout:'topCenter',
                timeout:2600
            }).show();
        <%}%>
    </script>
