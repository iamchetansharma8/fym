<header>
    <div id="fym-mob-head">
        <span id="fym-logo"><h1>fym</h1></span>
        <span id="fym-drop" onclick="myDropDown()"><i class="fas fa-bars"></i></span>
    </div>
    <ul id="get-ham">
        <% if(locals.user){%>
            <li>
                <a href="/"><i class="fas fa-home"></i> Home</a>
            </li>
            <li>
                <a href="/users/profile/<%=user.id%>"><i class="fas fa-user-tie"></i> <%=user.name%></a>
            </li>
            <li>
                <%if(user.active.length>0){%>
                    <a href="/active-chats/show"><i class="fab fa-facebook-messenger"></i> <span>Chats</span> <sub id="new-chat-sub"> <i class="fas fa-circle"></i><%=user.active.length%> </sub></a>
                <%}else{%>
                    <a href="/active-chats/show"><i class="fab fa-facebook-messenger"></i> <span>Chats</span> </a>
                <%}%>
            </li>
            <li>
                <a href="/post/create_page"><i class="fas fa-plus"></i> New Post</a>
            </li>
            <li>
                <a href="/post/all_posts"><i class="fas fa-wallet"></i> All posts</a>
            </li>
            <li>
                <a href="/users/sign_out"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
            </li>
        <%}else{%>
            <li>
                <a href="/"><i class="fas fa-home"></i> Home</a>
            </li>
            <li>
                <a href="/post/create_page"><i class="fas fa-plus"></i> New Post</a>
            </li>
            <li>
                <a href="/post/all_posts"><i class="fas fa-wallet"></i> All posts</a>
            </li>
            <li>
                <a href="/users/sign_in"><i class="fas fa-sign-in-alt"></i> Sign In</a>
            </li>
            <li>
                <a href="/users/sign_up"><i class="fas fa-user-plus"></i> Sign Up</a>
            </li>
            <li>
                <a href="/users/forgot_password"><i class="fas fa-key"></i> Forgot Password</a>
            </li>
        <%}%>
    </ul>
</header>
<script>
    function myDropDown(){
        let hamm=document.getElementById('get-ham');
        if(hamm.style.visibility=="visible"){
            hamm.style.visibility="collapse";
            hamm.style.height="0px"
        }else{
            hamm.style.visibility="visible";
            hamm.style.height="100%";
        }
    }
</script>