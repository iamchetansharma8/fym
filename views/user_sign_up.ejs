<section class="sign-up">
    <section class="sign-up-img">
        <img src="/images/sign-up2.jpg" alt="signup-img">
    </section>
    <section class="sign-up-main">
        <h1>Sign up to fym</h1>
        <p>
            <button class="google-btn"><a href="/users/auth/google"><i class="fab fa-google"></i>Google Sign In | Sign Up</a></button>
        </p>
        <br>
        <span>OR</span>
        <br>
<form class="sign-up-form" action="/users/create" method="POST">
    <div class="sign-up-inputs">
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="Your name" required>
    </div>
    <div class="sign-up-inputs">
        <label for="email">Email</label>
        <input type="email" name="email" placeholder="Your email" required>
    </div>
    <div class="sign-up-inputs">
        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" required>
    </div>
    <div class="sign-up-inputs">
        <label for="confirm_password">Confirm Password</label>
        <input type="password" name="confirm_password" placeholder="Confirm Password" required>
    </div>
    <button class="create-acc-btn"><input type="submit" value="Create Account"></button>
</form>
    </section>
</section>